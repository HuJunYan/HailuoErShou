<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_my_card"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        tools:background="@drawable/iv_card_bg_blue">

        <ImageView
            android:id="@+id/iv_card_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_white_corner_circle"
            android:padding="2dp" />

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_toRightOf="@id/iv_card_icon"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/iv_bind_bank_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/dp_4"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/card_name"
            android:layout_below="@id/iv_card_icon"
            android:layout_marginTop="36dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="**** **** **** 2085" />

    </RelativeLayout>

</LinearLayout>
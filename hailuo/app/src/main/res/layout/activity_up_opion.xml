<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_opion"
        style="@style/AppTheme.Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <TextView
                android:id="@+id/iv_regist_return"
                style="@style/title_back_style" />

            <TextView
                android:id="@+id/tv_home_title"
                style="@style/title_txt_style"
                android:text="我要吐槽" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/global_bg_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="请选择吐槽类型"
            android:textColor="@color/me_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="8dp"
        android:numColumns="4"
        android:padding="13dp"
        android:verticalSpacing="8dp"
        tools:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/me_bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_gray_line"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/opion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="left"
            android:hint="请描述下您在使用过程中遇到的问题，我们都会尽快给您答复，并且帮您解决！"
            android:maxLength="200"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_8"
            android:textColorHighlight="@color/global_txt_gray"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/tv_content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:text="0/200"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_feed_back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_feed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="上传图片"
                android:textColor="@color/global_txt_black5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="提供遇到问题的页面截图"
                android:textColor="@color/global_txt_black6"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="17dp"
        android:background="@drawable/global_btn_selector"
        android:gravity="center"
        android:text="立即吐槽"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_dialog_style"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:text="温馨提示"
        android:textColor="@color/global_txt_black4"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_coupons_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:textColor="@color/global_txt_black5"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_dialog_coupons_confirm"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/global_btn_selector"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/global_txt_white"
        android:textSize="14sp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.InviteFriendsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_invite_friends"
        style="@style/AppTheme.Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <TextView
                android:id="@+id/iv_invite_friends_return"
                style="@style/title_back_style" />

            <TextView
                style="@style/title_txt_style"
                android:text="邀请好友" />

            <TextView
                android:id="@+id/tv_cash_red_packet"
                style="@style/title_right_text_style"
                android:text="现金红包" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/tv_invite_my_friends"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FF6633"
        android:gravity="center"
        android:text="邀请好友"
        android:textColor="@color/global_txt_white"
        android:textSize="18sp" />

    <WebView
        android:id="@+id/webview_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_invite_my_friends"
        android:layout_below="@id/tb_invite_friends">

    </WebView>
</RelativeLayout>
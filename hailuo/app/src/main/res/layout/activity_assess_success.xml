<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bind_bank_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_assess_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl"
        android:layout_below="@+id/tb_assess_success"
        android:background="@color/white" />

    <View
        android:id="@+id/view_line"
        style="@style/split_line_style"
        android:layout_below="@id/rv_assess_success" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_get_money"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/global_btn_selector"
            android:gravity="center"
            android:text="马上拿钱"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_assess_success"
        style="@style/AppTheme.Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <TextView
                android:id="@+id/tv_assess_success_back"
                style="@style/title_back_style" />

            <TextView
                style="@style/title_txt_style"
                android:text="评估结果" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_activity_bg_color"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_auth_extro"
        style="@style/AppTheme.Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <TextView
                android:id="@+id/tv_auth_extro_back"
                style="@style/title_back_style" />

            <TextView
                android:id="@+id/tv_bank_card_title"
                style="@style/title_txt_style"
                android:text="紧急联系人" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_auth_extro"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@color/global_bg_white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/icon_leftlable"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/icon_rightlable"
                android:gravity="center"
                android:text="请填写真实有效的紧急联系人信息"
                android:textColor="@color/global_txt_black5"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>
        <View style="@style/split_line_style" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/global_bg_white">


            <TextView
                android:id="@+id/tv_auth_nexus1_key"
                style="@style/auth_center_txt_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="与我关系" />

            <RelativeLayout
                android:id="@+id/rl_auth_nexus1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_auth_nexus1_key">

                <TextView
                    android:id="@+id/tv_auth_nexus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/global_txt_black4"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/global_bg_white">

            <View style="@style/split_line_style" />

            <TextView
                android:id="@+id/tv_auth_nexus_name1_key"
                style="@style/auth_center_txt_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="姓    名" />

            <EditText
                android:id="@+id/et_auth_nexus_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_auth_contacts1"
                android:layout_alignParentEnd="true"

                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_auth_nexus_name1_key"
                android:background="@null"
                android:hint="请输入姓名"
                android:maxLength="50"
                android:textColorHint="@color/edit_text_hint_color"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/iv_auth_contacts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/contact_icon" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/global_bg_white">

            <View style="@style/split_line_style" />

            <TextView
                android:id="@+id/tv_auth_nexus_phone"
                style="@style/auth_center_txt_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="手机号" />

            <EditText
                android:id="@+id/et_auth_nexus_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_auth_nexus_phone"
                android:background="@null"
                android:hint="请输入联系电话"
                android:inputType="phone"
                android:maxLength="18"
                android:textColorHint="@color/edit_text_hint_color"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@color/global_bg_white">

            <View style="@style/split_line_style" />

            <TextView
                android:id="@+id/tv_auth_nexus2_key"
                style="@style/auth_center_txt_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="与我关系" />

            <RelativeLayout
                android:id="@+id/rl_auth_nexus2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_auth_nexus2_key">

                <TextView
                    android:id="@+id/tv_auth_nexus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/global_txt_black4"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/global_bg_white">

            <View style="@style/split_line_style" />

            <TextView
                android:id="@+id/tv_auth_nexus_name2_key"
                style="@style/auth_center_txt_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="姓    名" />

            <EditText
                android:id="@+id/et_auth_nexus_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_auth_nexus_name2_key"
                android:background="@null"
                android:hint="请输入姓名"
                android:maxLength="50"
                android:textColorHint="@color/edit_text_hint_color"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_auth_contacts2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/contact_icon" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/global_bg_white">

            <View style="@style/split_line_style" />

            <TextView
                android:id="@+id/tv_auth_nexus_phone2"
                style="@style/auth_center_txt_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="手机号" />

            <EditText
                android:id="@+id/et_auth_nexus_phone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_auth_nexus_phone2"
                android:background="@null"
                android:hint="请输入联系电话"
                android:inputType="phone"
                android:maxLength="18"
                android:textColorHint="@color/edit_text_hint_color"
                android:textSize="14dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_auth_extro_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/global_btn_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</RelativeLayout>

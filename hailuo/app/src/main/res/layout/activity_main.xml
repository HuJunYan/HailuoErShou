<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bnve"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:itemIconTint="@color/selector_main_tab_color"
        app:itemTextColor="@color/selector_main_tab_color"
        app:menu="@menu/menu_navigation_selector" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bnve" />

    <View
        android:id="@+id/point"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/iv_diversion"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_70"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/point"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/iv_diversion"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>
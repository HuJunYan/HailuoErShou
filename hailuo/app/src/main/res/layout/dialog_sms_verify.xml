<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_5dp">

        <RelativeLayout
            android:id="@+id/dialog_sms_cancle"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dialog_unbind_card_cancle" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:gravity="center_horizontal"
            android:text="短信验证"
            android:textColor="@color/global_txt_black4"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sms"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_horizontal"
            android:text="请确认手机号为还款银行卡预留手机号"
            android:textColor="@color/global_txt_black5"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:id="@+id/rl_mobile_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/tv_tip"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/dp_14">

            <EditText
                android:id="@+id/et_input_phone_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_dialog_edittext_border"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_12"
                android:textColor="@color/global_txt_black4"
                android:textColorHighlight="@color/global_txt_gray"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_clear_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sms_verify_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/rl_mobile_num"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_input_verify_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_dialog_edittext_border"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/global_txt_black4"
                android:textColorHighlight="@color/global_txt_gray"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/dialog_get_sms_code"
                android:layout_width="90dp"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_error_mobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/rl_sms_verify_code"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_mobile_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:textColor="@color/me_txt_red_color"
                android:textSize="@dimen/sp_12"
                android:visibility="invisible" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_dialog_confirm_refund"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_error_mobile"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/shape_sms_unconfir_bg"
            android:clickable="false"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

</RelativeLayout>
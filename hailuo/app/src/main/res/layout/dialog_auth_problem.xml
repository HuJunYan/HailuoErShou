<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:background="@color/colorGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_dialog_assess"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:text="温馨提示"
            android:textColor="@color/global_txt_black4"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="29dp"
            android:text="认证过程中您是否遇到问题？"
            android:textColor="@color/global_txt_black5"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_back_to_homepage"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_stroke_conner_4dp"
                android:gravity="center"
                android:text="回到首页"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_dialog_yes_speek"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/global_btn_selector"
                android:gravity="center"
                android:text="是，我要吐槽！"
                android:textColor="@color/global_txt_white"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_auth_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_auth_dialog_close" />
</RelativeLayout>

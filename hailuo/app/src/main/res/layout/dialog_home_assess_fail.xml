<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/shape_item_dialog_style"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="200dp">

        <TextView
            android:id="@+id/dialog_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/me_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_home_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_home_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="内容"
            android:textColor="@color/global_txt_black5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/i_know"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="36dp"
            android:layout_below="@id/dialog_home_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/global_btn_selector"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/global_txt_white"
            android:textSize="18sp" />


    </RelativeLayout>
</LinearLayout>
